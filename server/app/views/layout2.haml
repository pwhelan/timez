%html
  %head
    %script{:src => "/js/lib/jquery/dist/jquery.js"}
    %script{:src => "/js/lib/canjs/can.jquery.js"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "/js/lib/bootstrap/dist/css/bootstrap.min.css"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "/js/lib/bootstrap/dist/css/bootstrap-theme.min.css"}
    %script{:src => "/js/lib/bootstrap/dist/js/bootstrap.min.js"}
  %body
    %nav.navbar.navbar-default{:role => "navigation"}
      .container-fuild
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{:type => "button", :data{:toggle => "collapse", :target => "#bs-example-navbar-collapse-1"}}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        %a.navbar-brand{:href => '#'} Brand
      
      / Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.navbar.navbar-end
          %li.active
            %a{:href => "#"} Link
          %li
            %a{:href => "#"} Link
          %li.dropdown
            %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}}
              Dropdown
            %ul.dropdown-menu
              %li
                %a{:href => "#"} Action
              %li
                %a{:href => "#"} Another Action
              %li
                %a{:href => "#"} Someting Else here
              %li.divider
              %li
                %a{:href => "#"} Separated Link
              %li
                %a{:href => "#"} One Monre Separated Link
        
        %form.navbar-form.navbar-left{:role => "search"}
          .form-group
            %input.form-control{:type => "text", :placeholder => "Search"}
          %button.btn.btn-default{:type => "submit"}
            Submit
        
        %ul.nav.navbar-nav.navbar-right
          %li
            %a{:href => "#"} Link
    != yield
  %footer
