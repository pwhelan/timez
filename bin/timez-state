#!/bin/bash

if [ -L $0 ]; then
	REALBIN=`readlink $0`
	BINDIR=`dirname $REALBIN`
elif [ -f $0 ]; then
	BINDIR=`dirname $0`
fi


OS=`uname`
eval `$BINDIR/state/$OS`

CHILDREN=""

for CHILDPID in `ps x -o ppid,pid | grep '^[[:space:]]'$WINDOWPID | awk -F ' ' '{print $2}'`; do
	CHILDEXEC=`readlink /proc/$CHILDPID/exe`
	CHILDCWD=`readlink /proc/$CHILDPID/cwd`
	
	read -r -d '' CHILD <<EOF
	{
		"exec": "$CHILDEXEC",
		"pid": "$CHILDPID",
		"cwd": "$CHILDCWD"
	}
	
EOF
	CHILDREN=$CHILDREN" "$CHILD,
done

cat << EOF http POST http://127.0.0.1:9137/task/state/ 2>&1 > /dev/null
{
	"exec": "$WINDOWBIN",
	"name": "$WINDOWNAME",
	"idle": "$IDLETIME",
	"cwd": "$WINDOWCWD",
	"pid": "$WINDOWPID",
	"children": [
		$CHILDREN
		{}
	]
}
EOF

if [ "$IDLETIME" -gt `expr 5 '*' 60` ]; then
	timez stop $IDLETIME 2>&1 > /dev/null
fi
